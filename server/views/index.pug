extends layout
block head 
    link(rel="stylesheet" href="/style.css")
block body
    .wrapper
        .showSlides-container
            each i in slider 
                .mySlides.fade
                    .text
                        p #{i.opisanie_slider}
                        h1 #{i.title_slider}
                        a(href="/catalogue/rpgames") Исcледовать
                    each o in products 
                        if o.id_product == i.product_id 
                            img(src='/images/'+o.image_product alt="").img
            .mySlides.fade
                img(src="/images/cat.jpg" style="width: 100%" alt="").img
        br
        div(style="text-align: center;")
            span(class="dot" onclick="currentSlide(1)")
            span(class="dot" onclick="currentSlide(2)")
            span(class="dot" onclick="currentSlide(3)")
            span(class="dot" onclick="currentSlide(4)")
    .news
        .news__container 
            h1 БЕСПЛАТНАЯ ДОСТАВКА ОТ 5000₽
            p Сделайте заказ и получите подарок!
    img.dragon(src="/images/secret.gif")
    .wrapper
        .product
            h1 ХИТ ПРОДАЖ
            .product__container
                //- each i in products
                - for(var i = 1; i <= 4; i++)
                    .card
                        .card__img
                            img(src='/images/'+products[i].image_product alt=products[i].name_product).card__img__src
                        p.card__title #{products[i].name_product} 
                        h2.card__price ₽ #{products[i].price_product} 
                        .card__button
                            a(href='/catalogue/product/' + products[i].id_product).button__content Купить 
                            .button__icon(onclick=`addProductToCart(${products[i].id_product})`)
                                svg(xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor") 
                                    path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z") 
                        .card__info 
                            if products[i].vozrast_ogranich_product
                                .age__block 
                                    .age #{products[i].vozrast_ogranich_product}+ 
                            if products[i].min_igrok_product
                                .people__block
                                    img(src='/images/mainIcons/people.svg' alt=products[i].name_product).card__img__src
                                    .people #{products[i].min_igrok_product}+ 
                            if products[i].vremya_igry_product
                                .time__block 
                                    img(src='/images/mainIcons/time.svg' alt=products[i].Name_Product).card__img__src
                                    .time #{products[i].vremya_igry_product}+
            a(href="/catalogue/top").product__top__btn.showmore__btn ПОКАЗАТЬ ВСЕ
    .email__connect
        form(method="POST" action="/api/rassylka/?url=|", enctype="multipart/form-data").email__container
            h2 ПОЛУЧАЙТЕ СКИДКИ И ПОДАРКИ
            .inp__container 
                input(type="email" placeholder="Ваш e-mail" name="email_rassylka" required)
                input(type="submit", value="ПОДПИСАТЬСЯ")
    .wrapper
        .product
            h1 НОВИНКИ
            .product__container
                //- each i in newproduct
                - for(var i = 1; i <= 4; i++)
                    .card
                        .card__img
                            img(src='/images/'+newproduct[i].image_product alt=newproduct[i].name_product).card__img__src
                        p.card__title #{newproduct[i].name_product} 
                        h2.card__price ₽ #{newproduct[i].price_product} 
                        .card__button
                            a(href='/catalogue/product/' + newproduct[i].id_product).button__content Купить 
                            .button__icon(onclick=`addProductToCart(${newproduct[i].id_product})`)
                                svg(xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor") 
                                    path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z") 
                        .card__info 
                            if newproduct[i].vozrast_ogranich_product
                                .age__block 
                                    .age #{newproduct[i].vozrast_ogranich_product}+ 
                            if newproduct[i].min_igrok_product
                                .people__block
                                    img(src='/images/mainIcons/people.svg' alt=newproduct[i].name_product).card__img__src
                                    .people #{newproduct[i].min_igrok_product}+ 
                            if newproduct[i].vremya_igry_product
                                .time__block 
                                    img(src='/images/mainIcons/time.svg' alt=newproduct[i].Name_Product).card__img__src
                                    .time #{newproduct[i].vremya_igry_product}+
            a(href="/catalogue/new").product__new__btn.showmore__btn ВСЕ НОВИНКИ
block scripts