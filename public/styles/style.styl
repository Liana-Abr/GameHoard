@import 'https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap'

// Цвета
main = #EA581D
main2 = #212121
second = #FF6A00
bg = white

// Миксины
dflex(f, a, j)
    display flex
    flex-direction f
    align-items a
    justify-content j

// Стили

body
    height 100vh
    margin 0
    padding 0
    dflex(column, center, flex-start)
    font-family 'Roboto', sans-serif;

.wrapper
    width 50%

.popup
    position absolute
    dflex(column, center, center)
    top 30px
    left 0
    width 100%
    background bg
    font-weight bolder
    border-bottom 1px main solid
    opacity 0
    visibility hidden
    transition 0.2s all
    z-index 2
    .popup__content
        width 50%
        height 100%
        dflex(row, center, flex-start)
        .popup__container
            width 60%
            dflex(column, center, space-around)
            gap 15px
            a
                text-decoration none
                color black
                &:hover
                    color main
        .popup__tabs
            height 100%
            width 40%
            dflex(column, flex-start, space-around)
            border-right 1px solid main
            border-left 1px solid main
            .popup__tab
                width 100%
                height 60px
                dflex(row, center, center)
                transition 0.1s all
                cursor pointer
                text-decoration none
                color main
                &:hover
                    background second
.logo
    width 135px
.icon
    color main2
    width 28px
    &:hover
        color main
.header
    background bg
    width 100%
    height 50px
    color main2
    font-weight bolder
    dflex(row, center, center)
    box-sizing border-box
    z-index 4
    .header__content
        dflex(row, center, space-between)
        height 100%
        width 50%
        .logo
            width 95px
        .header__tabs
            list-style none
            padding 0
            margin 0
            dflex(row, center, center)
            height 100%
            .header__tab
                dflex(row, center, center)
                text-decoration none
                color inherit
                height 100%
                padding-left 15px
                padding-right 15px
                transition 0.1s all
                border-bottom 2px #00000000 solid
                &:hover
                    border-bottom 2px main solid
                    color main
            .active
                border-bottom 2px main solid
                color main
        .header__icons
            height 100%
            width 8%
            dflex(row, center, space-between)
        .header__search 
            width 20%
            height 50%
            dflex(row, center, center)
            input
                width 100%
                outline none
                border-radius 0px
                border 1px solid #C1C1C1
                height 100%

// ------------------------FOOTER------------------------- //
footer
    dflex(row, center, center)
    width 100%
    position absolute
    bottom 0
    border-top 1px solid main
    font-size 15px
    height 356px
    color #CBCFD4
    background #212121
    .footer__container
        dflex(row, flex-start, space-between)
        height 70%
        width 50%
        bottom 0
        font-size 15px
        .footer__about
            width 30%
            a
                color #FF6A00
                padding 2px
                text-decoration none
                &:hover
                    text-decoration underline
        .footer__links
            width 70%
            dflex(row, flex-start, flex-end)
            ul
                margin 0
                list-style none
                .links__header
                    font-size 13px
                    font-weight bold
            th 
                padding-bottom 12px
                text-align left
                width auto
                color #ff6a00
            a
                color #FF6A00
                padding 2px
                text-decoration none
                &:hover
                    text-decoration underline

