@import 'https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap'

// Цвета
main = #EA581D
bg = white

// Миксины
dflex(f, a, j)
    display: flex
    flex-direction: f
    align-items: a
    justify-content: j

// Стили
body
    margin 0
    padding 0
    dflex(column, center, flex-start)
    font-family 'Roboto', sans-serif;

.wrapper
    width 50%


.header
    width: 100vw
    height 50px
    color main
    font-weight bolder
    border-bottom 1px main solid
    dflex(row, center, center)
    box-sizing border-box
    .header__content
        dflex(row, center, space-between)
        height 100%
        width 50%
        .logo
            width 95px
        .catalogue__popup
            position absolute
            top 0
            left 0
            width 500px
            background bg
            border 1px main solid
            opacity 0
            visibility hidden
            transition 0.1s all easy-in
        .header__tabs
            list-style none
            padding 0
            margin 0
            dflex(row, center, center)
            height: 100%
            width 40%
            .header__tab
                dflex(row, center, center)
                text-decoration none
                color inherit
                height 100%
                padding-left 15px
                padding-right 15px
                transition 0.1s all
                &:hover
                    background #00000015
            .icons
                height 100%
                dflex(row, flex-start, flex-start)
                margin 0 0 0 30px
                .icon
                    width 28px

