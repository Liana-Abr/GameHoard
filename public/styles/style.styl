                height 20px
    .card__button
        width 60%
        height 44px
        dflex(row, center, space-between)
        transition 0.5s all
        .button__content
            height 100%
            width 70%
            background main
            transition 0.5s all
            dflex(row, center, center)
            color #ffffff
            cursor pointer
            text-decoration none
        .button__icon
            dflex(row, center, center)
            height 100%
            width 30%
            background main2
            transition 0.5s all
            cursor pointer

            svg
                width 22px
                color #ffffff
