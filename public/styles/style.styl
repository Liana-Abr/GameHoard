.card
    width 203px
    height 387px
    background #FFFFFF
    box-shadow 0 0 18px 2px #00000025
    dflex(column, center, space-around)
    padding 10px
    transition 0.5s all
    &:hover .card__info
        visibility visible
        height 40px
        opacity 1
    .card__img
        width 65%
        height 150px
        .card__img__src
            height 150px
            width 100%
    .card__info
        dflex(row, center, space-around)
        width 100%
        height 10px
        margin-top 5px
        visibility hidden
        transition 0.5s all
        opacity 0
        .age__block
            dflex(row, center, center)
            width 30%
            height 100%
            gap 4px
        .people__block
            dflex(row, center, center)
            width 40%
            height 100%
            gap 4px
