@import 'https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap'

// Цвета
main = #EA581D // Оранжевый
main2 = #212121 // Тёмный
second = #FF6A00
bg = white

// Миксины
dflex(f, a, j)
    display flex
    flex-direction f
    align-items a
    justify-content j

// Стили
body
    overflow-x hidden
    height 100%
    min-height 100vh
    margin 0
    padding 0
    dflex(column, center, space-between)
    font-family 'Roboto', sans-serif;
    gap 30px

.wrapper
    width 60%

.popup
    dflex(column, center, center)
    width 100%
    font-weight bolder
    transition 0.2s all
    z-index 2
    .popup__content
        width 60%
        height 100%
        dflex(column, center, flex-start)
        .popup__container
            width 100%
            height 30px
            dflex(row, center, center)
            border-right 1px solid main2
            border-left 1px solid main2
            border-bottom 1px solid main2
            gap 25px
            a
                text-decoration none
                color main2
                &:hover
                    color main
        .popup__tabs
            height 100%
            width 100%
            dflex(row, flex-start, space-around)
            border-right 1px solid main2
            border-left 1px solid main2
            border-bottom 1px solid main2
            .popup__tab
                width 100%
                height 60px
                dflex(row, center, center)
                transition 0.1s all
                cursor pointer
                text-decoration none
                color main2
                &:hover
                    background main
                    color #fff
.logo
    width 135px
.icon
    color main2
    width 28px
    &:hover
        color main
.dragon
    position absolute
    top 400px
    z-index 9999999
    left -3000px
    transition 5s all ease-in-out
header.header
    width 100%
    height 50px
    color main2
    font-weight bolder
    background bg
    dflex(row, center, center)
    box-sizing border-box
    z-index 4
    .header__content
        dflex(row, center, space-between)
        height 100%
        width 60%
        .logo
            width 95px
        .header__tabs
            list-style none
            padding 0
            margin 0
            dflex(row, center, center)
            height 100%
            .header__tab
                dflex(row, center, center)
                text-decoration none
                color inherit
                height 100%
                padding-left 15px
                padding-right 15px
                transition 0.1s all
                border-bottom 2px #00000000 solid
                &:hover
                    border-bottom 2px main solid
                    color main
            .active
                border-bottom 2px main solid
                color main
        .header__icons
            height 100%
            width 8%
            dflex(row, center, space-between)
        .header__search 
            width 20%
            height 50%
            dflex(column, flex-start, flex-start)
            input
                width 100%
                height 100%
                min-height 100%
                outline none
                border-radius 0px
                border 1px solid #C1C1C1
                height 100%
                padding 0 0 0 10px
            output
                position relative
                background #ffffff
                border 1px solid main
                width 100%
                height auto
                dflex(column, center, center)
                display none
                a
                    text-decoration none
                    padding-top 10px
                    padding-bottom 10px
                    dflex(column, center, center)
                    color main2
                    height 100%
                    width 100%
                    &:hover
                        background main2
                        color #fff
                

