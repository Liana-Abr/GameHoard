@import 'https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap'

// Цвета
main = #EA581D // Оранжевый
main2 = #212121 // Тёмный
second = #FF6A00
bg = white

// Миксины
dflex(f, a, j)
    display flex
    flex-direction f
    align-items a
    justify-content j

// Стили
body
    height 100%
    min-height 100vh
    margin 0
    padding 0
    dflex(column, center, space-between)
    font-family 'Roboto', sans-serif;
    gap 30px

.wrapper
    width 60%

.popup
    dflex(column, center, center)
    width 100%
    background bg
    font-weight bolder
    transition 0.2s all
    z-index 2
    .popup__content
        width 60%
        height 100%
        dflex(column, center, flex-start)
        .popup__container
            width 100%
            height 30px
            dflex(row, center, center)
            border-right 1px solid main2
            border-left 1px solid main2
            border-bottom 1px solid main2
            gap 25px
            a
                text-decoration none
                color main2
                &:hover
                    color main
        .popup__tabs
            height 100%
            width 100%
            dflex(row, flex-start, space-around)
            border-right 1px solid main2
            border-left 1px solid main2
            border-bottom 1px solid main2
            .popup__tab
                width 100%
                height 60px
                dflex(row, center, center)
                transition 0.1s all
                cursor pointer
                text-decoration none
                color main2
                &:hover
                    background main
                    color #fff
.logo
    width 135px
.icon
    color main2
    width 28px
    &:hover
        color main

header.header
    width 100%
    height 50px
    color main2
    font-weight bolder
    background bg
    dflex(row, center, center)
    box-sizing border-box
    z-index 4
    .header__content
        dflex(row, center, space-between)
        height 100%
        width 60%
        .logo
            width 95px
        .header__tabs
            list-style none
            padding 0
            margin 0
            dflex(row, center, center)
            height 100%
            .header__tab
                dflex(row, center, center)
                text-decoration none
                color inherit
                height 100%
                padding-left 15px
                padding-right 15px
                transition 0.1s all
                border-bottom 2px #00000000 solid
                &:hover
                    border-bottom 2px main solid
                    color main
            .active
                border-bottom 2px main solid
                color main
        .header__icons
            height 100%
            width 8%
            dflex(row, center, space-between)
        .header__search 
            width 20%
            height 50%
            dflex(column, flex-start, flex-start)
            input
                width 100%
                height 100%
                min-height 100%
                outline none
                border-radius 0px
                border 1px solid #C1C1C1
                height 100%
                padding 0 0 0 10px
            output
                position relative
                background #ffffff
                border 1px solid main
                width 100%
                height auto
                dflex(column, center, center)
                display none
                a
                    text-decoration none
                    padding-top 10px
                    padding-bottom 10px
                    dflex(column, center, center)
                    color main2
                    height 100%
                    width 100%
                    &:hover
                        background main2
                        color #fff
                

// ------------------------FOOTER------------------------- //
footer
    dflex(row, center, center)
    width 100%
    border-top 1px solid main
    font-size 15px
    height 356px
    color #CBCFD4
    background #212121
    .footer__container
        dflex(row, flex-start, space-between)
        height 70%
        width 60%
        bottom 0
        font-size 15px
        .footer__about
            width 30%
            a
                color #FF6A00
                padding 2px
                text-decoration none
                &:hover
                    text-decoration underline
        .footer__links
            width 70%
            dflex(row, flex-start, flex-end)
            ul
                margin 0
                list-style none
                font-size 18px
                .links__header
                    font-size 13px
                    font-weight bold
                    text-decoration none
            li
                color #fff
                padding 2px
                text-decoration none
                &:hover
                    text-decoration underline
                    cursor pointer

.container
    dflex(column, center, space-around)
    width 100%
    height auto
.news
    width 100%
    height 160px
    background main2
    dflex(row, center, center)
    color #ffffff
    .news__container
        dflex(column, center, space-around)
        width 50%
        height 100%
        h1
            font-weight bold
.email__connect
    width 100%
    height 110px
    background main2
    dflex(row, center, center)
    color #ffffff
    .email__container
        dflex(row, center, space-between)
        gap 20px    
        width 50%
        height 100%
        h1
            width 50%
        .inp__container
            width 40%
            dflex(row, center, space-between)
            gap 20px
            input
                height 30px
                width 50%
                border-radius none
                border none
                outline none
                padding 0
            input[type="submit"]
                background main
                color #ffffff
                cursor pointer
            input[type="email"]
                padding-left 10px

.product
    dflex(column, center, center)
    gap 10px
    min-height 100%
    height 100%
    h1
        text-align center
        margin 0
    .product__container
        width 100%
        height auto
        dflex(row, flex-start, center)
        gap 40px
        flex-wrap wrap
.card
    width 203px
    height 387px
    background #FFFFFF
    box-shadow 0 0 18px 2px #00000025
    dflex(column, center, space-around)
    padding 10px
    .card__img
        width 65%
        height 150px
        .card__img__src
            height 150px
            width 100%
    .card__info
        dflex(row, center, space-around)
        width 100%
        height 50px
        margin-top 5px
        .age__block
            dflex(row, center, center)
            width 30%
            height 100%
            gap 4px
        .people__block
            dflex(row, center, center)
            width 40%
            height 100%
            gap 4px
            img
                height 40%
        .time__block
            dflex(row, center, center)
            width 40%
            height 100%
            gap 4px
            img
                height 30%
    .card__button
        width 60%
        height 44px
        dflex(row, center, space-between)
        transition 0.5s all
        .button__content
            height 100%
            width 70%
            background main
            transition 0.5s all
            dflex(row, center, center)
            color #ffffff
            cursor pointer
            text-decoration none
        .button__icon
            dflex(row, center, center)
            height 100%
            width 30%
            background main2
            transition 0.5s all
            cursor pointer

            svg
                width 22px
                color #ffffff
.product__page
    min-height 100%
    height 100%
    dflex(row, flex-start, space-around)
    gap 50px
    .product__page__content
        margin-top 60px
        width 50%
        height 100%
        h1
            margin 0
        p
            font-size 18px
        dflex(column, flex-start, space-around)
        gap 20px
        .product__page__info
            width 100%
            dflex(row, center, flex-start)
            gap 20px
    .product__page__image
        width 40%
        height 100%
        dflex(column, flex-start, flex-start)
        img
            width 100%
    .product__page__button
        font-weight bold
        width 50%
        height 50px
        background main2
        text-decoration none
        color #fff
        dflex(row, center, center)
        text-align center
        z-index 5
        &:hover
            background main
            color #fff
            
.showmore__btn
    margin-top 20px
    height 40px
    width 200px
    background main2
    dflex(row, center, center)
    color #fff
    text-decoration none

.catalogue
    dflex(row, flex-start, space-between)
    min-height 100%
    height 100%
    width 100%
    .catalogue__sideblocks
        dflex(column, flex-start, center)
        gap 20px
        height 100%
        width 20%
        .sideblocks__daygame
            color main2
            width 100%
            padding 20px
            height auto
            h2
                margin 0
                font-weight bold
                color main
            p
                margin 0
            dflex(column, center, center)
            gap 10px
            background #FFFFFF
            box-shadow 0 0 18px 2px #00000025
            .daygame__title
                color main
                font-weight bold
            .daygame__img
                width 80%
            .daygame__btn
                height 50px
                width 100%
                color #fff
                background main2
                dflex(column, center, center)
                cursor pointer
                text-decoration none
            .card__info
                dflex(row, center, space-around)
                width 100%
                height 50px
                margin-top 5px
                .age__block
                    dflex(row, center, center)
                    width 30%
                    height 100%
                    gap 4px
                .people__block
                    dflex(row, center, center)
                    width 40%
                    height 100%
                    gap 4px
                    img
                        height 40%
                .time__block
                    dflex(row, center, center)
                    width 40%
                    height 100%
                    gap 4px
                    img
                        height 30%
        .sideblocks__filters
            width 100%
            padding 20px
            height auto
            dflex(column, flex-start, center)
            gap 10px
            background #FFFFFF
            box-shadow 0 0 18px 2px #00000025
            .filters__price
                width 100%
                dflex(column, center, center)
                height auto
                .price__text 
                    width 100%
                    dflex(row, center, space-between)
                .price__range
                    width 100%
                    input
                        width 100%
            .filters__checkbox
                gap 5px
                dflex(column, flex-start, center)
            .checkbox
                width 100%
                dflex(row, center, space-between)
            .filters__submit
                width 100%
                height 35px
                input
                    font-size 16px
                    width 100%
                    height 100%
                    border none
                    outline none
                    border-radius none
                    background main
                    color #fff
    .catalogue__container
        width 70%
        height 100%
        dflex(column, center, flex-end)
        gap 40px
        .pagination
            width 300px
            height 30px
            dflex(row, center, space-between)
            .pagination__tab
                height 30px
                width 30px
                border 1px solid main
                dflex(row, center, center)
                text-decoration none
                color main2
                &:hover
                    color main
            .active__tab
                background main
                color #fff
                &:hover
                    color #fff
        .catalogue__products
            dflex(row, flex-start, center)
            gap 20px
            width 100%
            height 100%
            flex-wrap wrap